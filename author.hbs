{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{> header-home}}

{{! The big featured header }}

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}
    <header class="header-image-archive author-cover-image {{#if cover}}" style="background-image: url({{cover}}){{else}}no-cover{{/if}}">
        {{#if image}}
         <div class="author-image" style="background-image: url({{image}})"><span class="hidden">{{name}}'s Picture</span></div>
        {{/if}}
        <h1 class="author-name">{{name}}</h1>
    </header>


	<section>

        <h3 class="author-bio">{{bio}}</h3>
        <div class="author-meta">
            <span><i class="fa fa-keyboard-o"></i> {{plural ../pagination.total empty='No posts' singular='% post' plural='% posts'}}</span>
        </div>
    </section>
{{/author}}

